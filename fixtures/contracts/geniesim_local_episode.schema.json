{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Genie Sim Local Episode",
  "type": "object",
  "required": [
    "episode_id",
    "task_name",
    "frames",
    "frame_count",
    "quality_score",
    "validation_passed"
  ],
  "properties": {
    "episode_id": {"type": "string"},
    "task_name": {"type": "string"},
    "frames": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["step", "observation", "action", "timestamp"],
        "properties": {
          "step": {"type": "integer"},
          "observation": {"type": "object"},
          "action": {
            "type": "array",
            "items": {"type": "number"}
          },
          "timestamp": {"type": "number"}
        },
        "additionalProperties": true
      }
    },
    "frame_count": {"type": "integer"},
    "quality_score": {"type": "number"},
    "validation_passed": {"type": "boolean"}
  },
  "additionalProperties": true
}
