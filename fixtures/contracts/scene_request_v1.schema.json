{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SceneRequestV1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "scene_id"],
  "properties": {
    "schema_version": {
      "type": "string",
      "enum": ["v1"]
    },
    "scene_id": {
      "type": "string",
      "minLength": 1
    },
    "source_mode": {
      "type": "string",
      "enum": ["text"],
      "default": "text"
    },
    "text_backend": {
      "type": "string",
      "enum": ["scenesmith", "sage", "hybrid_serial"],
      "default": "hybrid_serial"
    },
    "prompt": {
      "type": "string"
    },
    "quality_tier": {
      "type": "string",
      "enum": ["standard", "premium"],
      "default": "standard"
    },
    "seed_count": {
      "type": "integer",
      "minimum": 1,
      "default": 1
    },
    "constraints": {
      "type": "object"
    },
    "provider_policy": {
      "type": "string",
      "enum": ["openai_primary", "openrouter_qwen_primary"],
      "default": "openrouter_qwen_primary"
    }
  }
}
