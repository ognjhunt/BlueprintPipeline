{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "3D-RE-GEN Scene Info",
  "type": "object",
  "required": [
    "scene_id",
    "image_size",
    "coordinate_frame",
    "meters_per_unit",
    "confidence",
    "version",
    "environment_type",
    "reconstruction_method",
    "generated_at"
  ],
  "properties": {
    "scene_id": {"type": "string"},
    "image_size": {
      "type": "array",
      "items": {"type": "integer"},
      "minItems": 2,
      "maxItems": 2
    },
    "coordinate_frame": {"type": "string"},
    "meters_per_unit": {"type": "number"},
    "confidence": {"type": "number"},
    "version": {"type": "string"},
    "environment_type": {
      "type": "string",
      "enum": ["kitchen", "office", "warehouse"]
    },
    "reconstruction_method": {"type": "string"},
    "generated_at": {"type": "string"}
  },
  "additionalProperties": true
}
